<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/textViewSerieNameValule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSerieName" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTextSerieName" />

    <TextView
        android:text="@string/textViewSerieSeasonsValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSerieSeasons" />

    <NumberPicker
        android:id="@+id/seasonNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:text="@string/textViewSerieChaptersValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSerieChapters" />

    <NumberPicker
        android:id="@+id/chapterNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:text="@string/buttonAddSerieTextValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddSerie" />

</LinearLayout>